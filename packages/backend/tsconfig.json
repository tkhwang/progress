{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"sourceRoot": "./src",
		"mapRoot": "./dist",
		"paths": {
			"@progress/api/*": ["./node_modules/@progress/api/dist/*"],
			"@progress/api": ["./node_modules/@progress/api/dist"],
			"@progress/orm/*": ["./node_modules/@progress/orm/dist/*"],
			"@progress/orm": ["./node_modules/@progress/orm/dist"]
		}
	},
	"include": ["src/**/*", "src/services/.ts"],
	"exclude": ["dist", "node_modules"]
}
